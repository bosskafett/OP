class Classes.Mailbox {	private var messages:Object;	private var blocked:Array;		public function getMessages()	{		return this.messages;	}	public function getMessageId(id:Number)	{		return this.messages[id].message;	}	public function getSenderId(id:Number)	{		return this.messages[id].sender;	}	public function deleteMessage(id:Number)	{		this.messages[id] = undefined;	}	public function getMailId(id:Number)	{		return this.messages[id];	}	public function addMail(mail:Object)	{		var mail = 0;		for(var i in this.messages){ mail++; };		if(mail.id == undefined)			mail.id = mail++;		if(mail.sender == undefined)			return;		if(this.blocked[mail.sender] == true)			return;		if(mail.message == undefined || mail.message == "")			mail.message = "This is an empty message.";		this.messages[mail.id] = mail;	}	public function blockSender(id:Number)	{		this.blocked[id] = true;	}	public function unblockSender(id:Number)	{		this.blocked[id] = false;	}}